{% extends 'base.html.twig' %}

{% block title %}Sprint{% endblock %}

{% block body %}
    <h1>Sprint</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sprint.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ sprint.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ sprint.description }}</td>
            </tr>
            <tr>
                <th>IsCompleted</th>
                <td>{{ sprint.isCompleted ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_sprint_index') }}">back to list</a>

    <a href="{{ path('app_sprint_edit', {'id': sprint.id}) }}">edit</a>

    {{ include('sprint/_delete_form.html.twig') }}
{% endblock %}

{% block body %}
    <h1>Sprint </h1>

    {{form_start(form)}}
     <div class="pcoded-content">
             
    <div class="container mt-4">
        <div class="form-group">
                {{ form_label(form.titre, 'Titre') }}
                {{ form_widget(form.titre, {'attr': {'class': 'form-control', 'placeholder': "titre sprint"}}) }}
                {{ form_errors(form.titre) }}
        </div>
        <div class="form-group">
                {{ form_label(form.description, 'Description') }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': "Description sprint"}}) }}
                {{ form_errors(form.description) }}
        </div>
        <div class="form-group">
            {{ form_label(form.projet, 'Projet') }}
            {{ form_widget(form.projet, {'attr': {'class': 'form-control', 'placeholder': "Description sprint"}}) }}
            {{ form_errors(form.projet) }}
        </div>
        <div class="form-group">
            {{ form_label(form.isCompleted, 'Completed') }}
            {{ form_widget(form.isCompleted, {'attr': {'class': 'form-check-input'}}) }}
            {{ form_errors(form.isCompleted) }}
        </div>
        <button type="submit" class="btn btn-primary">Soumettre</button>
    </div>
    </div>
        
    {{form_end(form)}}
{{include('content/data.html.twig')}}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Etat index{% endblock %}

{% block body %}
    <h1>Etat index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_etat</th>
                <th>Type_etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etat in etats %}
            <tr>
                <td>{{ etat.id }}</td>
                <td>{{ etat.nomEtat }}</td>
                <td>{{ etat.typeEtat }}</td>
                <td>
                    <a href="{{ path('app_etat_show', {'id': etat.id}) }}">show</a>
                    <a href="{{ path('app_etat_edit', {'id': etat.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_etat_new') }}">Create new</a>
{% endblock %}
